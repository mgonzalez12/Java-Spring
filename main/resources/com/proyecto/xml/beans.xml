<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="persona" class="com.proyecto.beans.Persona">
		<property name="pais" ref="pais"></property>
		<property name="id" value="1"></property>
		<property name="nombre" value="Marcos"></property>
		<property name="apodo" value="Ingeniero"></property>
		
	</bean>
	
	<bean id="pais" class="com.proyecto.beans.Pais">
		<property name="nombre" value="peru"></property>
		<property name="cuidad" ref="cuidad"></property>
	</bean>
	
	<bean id="cuidad" class="com.proyecto.beans.Cuidad">
		<property name="nombre" value="Lima"></property>
	</bean>
    
</beans>