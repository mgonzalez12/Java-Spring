<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="persona" class="com.proyecto.beans.Persona" autowire="byName" scope="singleton" lazy-init="true">
		<property name="pais" ref="pais"></property>
		<property name="ciudad" ref="ciudad"></property>
			
	</bean>
	
	<bean id="pais" class="com.proyecto.beans.Pais">
		<property name="nombre" value="peru"></property>
		
	</bean>
	
	<bean id="ciudad" class="com.proyecto.beans.Ciudad">
		<property name="nombre" value="Lima"></property>
	</bean>
    
</beans>